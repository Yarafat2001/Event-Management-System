                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Events
                        </a>
                        <ul class="dropdown-menu bg-dark-subtle">
                            <li>
                                <a class="dropdown-item" href="/events/sport">
                                    <i class="fa-solid fa-medal"></i> Sport
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/events/conferences">
                                    <i class="fa-solid fa-comment"></i> Conferences
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/events/expo">
                                    <i class="fa-solid fa-universal-access"></i> Expo
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/events/concert">
                                    <i class="fa-solid fa-music"></i> Concert
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/events/festival">
                                    <i class="fa-solid fa-tag"></i> Festival
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/events/art">
                                    <i class="fa-solid fa-palette"></i> Art
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="/events/community">
                                    <i class="fa-solid fa-people-group"></i> Community
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" href="/events/holiday">
                                    <i class="fa-solid fa-sun"></i> Holiday
